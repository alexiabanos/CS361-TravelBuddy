<!-- FLIGHTS PAGE -->

<!-- DELETE JS SCRIPT -->
<script src="./js/flight/delete_flight.js"></script>

  <div class="table-responsive">
    <div class="table-wrapper">			
      <div style="margin-top:100px; margin-bottom: 100px;">
        <div class="container">
          <div class="row table-responsive align-middle">
			  
			  <!--BACK BUTTON -->
				<button class="btn btn-outline-primary my-2 my-sm-0" type="submit" onclick="history.back()">Back</button>
                
                <!-- FLIGHTS -->
                <h1>Flights</h1>
                <hr>
                <p>View, edit or delete your flight details:</p>

                <!-- ADD BUTTON -->
                <table>
					<tbody>
                    <tr>
                      <td colspan="6" align="left">
                      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addFlightModal" title="Add">Add A New Flight + </button>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- DATA TABLE -->
                <table class="table table-hover" id="flights-table">
                    <thead class="table-light">
                      <tr>
                        <th>Departing <br> Airport</th>
						<th>Departure <br> Date</th>
						<th>Departure <br> Time</th>
						<th>Arriving <br> Airport</th>
						<th>Arrival <br> Date</th>
						<th>Arrival <br> Time</th>
                        <th>Delete</th>
                		<th>Edit</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each data}}
                      <tr data-value={{this.flight_id}}>
                        <td>{{this.flight_id}}</td>
                        <td>{{this.depart_airp}}</td>
                        <td>{{this.depart_date}}</td>
                        <td>{{this.depart_time}}</td>
                        <td>{{this.arrive_airp}}</td>
                        <td>{{this.arrive_date}}</td>
                        <td>{{this.arrive_time}}</td>
						
                        <!-- DELETE BUTTON-->
						<td>
						<button class="btn btn-outline-danger my-2 my-sm-0" data-bs-toggle="modal" data-bs-target="#deleteFlightModal{{this.flight_id}}"  data-value="{{this.flight_id}}">Delete</button>
						</td>
						
						<!-- EDIT BUTTON-->
						<td>
						<button class="btn btn-outline-warning my-2 my-sm-0" data-bs-toggle="modal" data-bs-target="#editFlightModal{{this.flight_id}}"  data-value="{{this.flight_id}}">Edit</button>
						</td>
                      </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

   <!-- ADD MODAL -->
	<div id="addFlightModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form id="add-flight-form-ajax">
					<div class="modal-header">						
						<h4 class="modal-title">Add Flight</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					  <div class="modal-body">
            			<p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label for="depart_airp">Departing Airport: *</label>
							<input type="text" class="form-control" name="input-depart_airp" id="input-depart_airp" required>
						</div>
						<div class="form-group">
							<label for="depart_date">Departing Date: *</label>
							<input type="date" class="form-control" name="input-depart_date" id="input-depart_date" required>
						</div>
						<div class="form-group">
							<label for="depart_time">Departing Time: *</label>
							<input type="time" class="form-control" name="input-depart_time" id="input-depart_time" required>
						</div>
            			<div class="form-group">
							<label for="arrive_airp">Arrival Airport: *</label>
							<input type="text" class="form-control" name="input-arrive_airp" id="input-arrive_airp" required>
						</div>
						<div class="form-group">
							<label for="arrive_date">Arrival Date: *</label>
							<input type="date" class="form-control" name="input-arrive_date" id="input-arrive_date" required>
						</div>
						<div class="form-group">
							<label for="arrive_time">Arrival Time: *</label>
							<input type="time" class="form-control" name="input-arrive_time" id="input-arrive_time" required>
						</div>
            			</div>
					  <div class="modal-footer">
						<input type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-success" value="Add">
					  </div>
				</form>
			</div>
		</div>
	</div>

	<!-- ADD JS SCRIPT -->
	<script src="./js/flight/add_flight.js"></script>

	<!-- EDIT MODAL -->
	{{#each data}}
	<div id="editFlightModal{{this.flight_id}}" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form id="update-flight-form-ajax">
					<div class="modal-header">						
						<h4 class="modal-title">Edit Flight</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					  <div class="modal-body">
            			<p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label for="flight_id">
							<input type="hidden" name="flight_id-update" id="flight_id-update" value={{this.flight_id}}>
							</label>
							<label for="depart_airp">Departing Airport: *</label>
							<input type="text" class="form-control" name="input-depart_airp-update" id="input-depart_airp-update" value="{{this.depart_airp}}" required/>
						</div>
						<div class="form-group">
							<label for="depart_date">Departing Date: *</label>
							<input type="text" class="form-control" name="input-depart_date-update" id="input-depart_date-update" 
							value="{{this.depart_date}}" onfocus="(this.type='date')" onblur="(this.type='text')" required/>
						</div>
						<div class="form-group">
							<label for="depart_time">Departing Time: *</label>
							<input type="text" class="form-control" name="input-depart_time-update" id="input-depart_time-update" 
							value="{{this.depart_time}}" onfocus="(this.type='time')" onblur="(this.type='text')" required/>
						</div>
            			<div class="form-group">
							<label for="arrive_airp">Arrival Airport: *</label>
							<input type="text" class="form-control" name="input-arrive_airp-update" id="input-arrive_airp-update" value="{{this.arrive_airp}}" required/>
						</div>
						<div class="form-group">
							<label for="arrive_date">Arrival Date: *</label>
							<input type="text" class="form-control" name="input-arrive_date-update" id="input-arrive_date-update" 
								value="{{this.arrive_date}}" onfocus="(this.type='date')" onblur="(this.type='text')"required/>
						</div>
						<div class="form-group">
							<label for="arrive_time">Arrival Time: *</label>
							<input type="text" class="form-control" name="input-arrive_time-update" id="input-arrive_time-update" 
							value="{{this.arrive_time}}" onfocus="(this.type='time')" onblur="(this.type='text')" required/>
						</div>
            			</div>
					  <div class="modal-footer">
						<input type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="update-submit" class="btn btn-outline-success" value="Save Changes" onclick="updateFlight({{this.flight_id}})">
					  </div>
				</form>
			</div>
		</div>
	</div>
	{{/each}}

	<!-- UPDATE JS SCRIPT -->
	<script src="./js/hotel/update_hotel.js"></script>

	<!-- DELETE MODAL -->
	{{#each data}}
	<div id="deleteFlightModal{{this.flight_id}}" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Delete Flight</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<p><b>Are you sure you want to delete this Flight?</b></p>
						<p>This action cannot be undone.</p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-danger" value="Delete" onclick="deleteFlight({{this.flight_id}})">
					</div>
				</form>
			</div>
		</div>
	</div>
	{{/each}}